[binance]
ws_url = "wss://stream.binance.com:9443"
api_url = "https://fapi.binance.com"

[bybit]
ws_url = "wss://stream.bybit.com/v5/public/linear"
api_url = "https://api.bybit.com"

[pump]
price_threshold_pct = 5.0
min_window_mins = 5
max_window_mins = 15
volume_multiplier = 1.5

[derivatives]
min_funding_rate = 0.025
min_long_ratio = 0.65
min_oi_increase_pct = 10.0
poll_interval_secs = 45

[technical]
ema_extension = true
pivot_proximity = true
pivot_timeframe_mins = 60
emas = [7, 14, 28, 50, 200]

[telegram]
bot_token = "YOUR_BOT_TOKEN_HERE"
chat_id = "YOUR_CHAT_ID_HERE"
pump_screener_topic_id = "YOUR_OPTIONAL_TOPIC_ID_HERE"
alert_cooldown_secs = 300  # 5 minutes
